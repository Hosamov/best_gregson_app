block content   
  .header-container
    h1 ğŸ‘ Best Gregson Sibling ğŸ‘
    
    table#sibling-ranks.sibling-ranks
      tr
        th(class="rank-th thead") Rank
        th(class="sibling-th thead") Sibling
        th(class="vote-th thead") Vote
        th(class="votecount-th thead") Vote Count
      
      - var count = 1;
      each sibling in siblings
        tr(id="ranks")
          td(class="rank")=count++ 
          td(class="sibling-name")=sibling.name
          td 
            form(action="/" method="POST")
              button(type="submit" class=`${sibling.name}` name="theSibling" value=`${sibling.name}`) Vote!
          td(id=`vote-count-${sibling.name.toLowerCase()}`)=sibling.voteCount
